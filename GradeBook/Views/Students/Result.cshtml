@using iitu.web.example.Controllers
@using Microsoft.AspNetCore.Server.Kestrel.Core

@{
    ViewData["Title"] = "Student Info";
}

<h1 class="title is-1">@ViewData["action"]</h1>
<h2 class="subtitle is-2">@ViewData["firstNumber"] @ViewData["mark"] @ViewData["secondNumber"] = @ViewData["result"]</h2>
@{
    var student = ViewData["student"] as Student;
}
@if (student != null)
{
    <h2>@student.Name</h2>
    <h3>@student.DOB</h3>
    <h3>@student.GroupNumber</h3>
    <h3>@student.GetCode()</h3>
}
else
{
    <h2>NOT FOUND</h2>
}